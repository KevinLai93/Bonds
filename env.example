# API配置
API_BASE_URL=https://localhost:3000

# JWT配置（用于调试）
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# CBonds API配置（后端使用）
CBONDS_LOGIN=kinga@cubeipo.asia
CBONDS_PASSWORD=Kinga1234$

# 服务器配置
PORT=3000
NODE_ENV=development

# 前端環境變數配置
# 開發環境 API 端點
VITE_API_BASE_URL_HTTP=http://localhost:3000
VITE_API_BASE_URL_HTTPS=https://localhost:3000

# 生產環境 API 端點（請根據實際部署環境修改）
VITE_PROD_API_BASE_URL_HTTP=http://your-production-domain.com:3000
VITE_PROD_API_BASE_URL_HTTPS=https://your-production-domain.com:3000

# API 端口配置（如果 API 和前端在同一台服務器但不同端口）
VITE_API_PORT=3000

# Supabase 配置
VITE_SUPABASE_URL_HTTP=http://localhost:54321
VITE_SUPABASE_URL_HTTPS=https://localhost:54321
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# 協議控制
VITE_FORCE_HTTPS=false
VITE_AUTO_PROTOCOL_DETECTION=true
